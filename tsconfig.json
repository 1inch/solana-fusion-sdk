{
    "extends": "@1inch/tsconfig",
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["ES2024"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./src"
    },
    "include": ["./src/**/*.ts", "./src/**/*.json"]
}
