{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/cjs",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": false,
        "composite": false,
        "resolveJsonModule": true,
        "importHelpers": true,
    },
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts"
    ],
    "include": ["./src/**/*.ts", "./src/**/*.json"],
}
